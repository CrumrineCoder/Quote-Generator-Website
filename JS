var tButton = document.getElementsByClassName('twitter-btn')[0];

function tweet() {
	window.open('https://twitter.com/intent/tweet?&text=' + quotes[myIndex] + " ~ " + signs[myIndex] );   
}

tButton.addEventListener('click', tweet, false);
