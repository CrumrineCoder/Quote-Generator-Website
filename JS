var myIndex = 1;
var secondIndex=1;
var print = document.getElementById('quote');
var print2 = document.getElementById('signs');
myIndex = Math.floor(Math.random() * quotes.length-1) + 1; 
print.innerHTML = quotes[myIndex]; //Print first value of array right away.
print2.innerHTML= signs[myIndex];

function nextQuote() {
  myIndex = Math.floor(Math.random() * quotes.length-1) + 1;  
  print.innerHTML = quotes[myIndex];
  print2.innerHTML = signs[myIndex];
 
 /* myIndex = (myIndex + 1) % (quotes.length);
  */


 /* secondIndex = (secondIndex + 1) % (signs.length);*/
};



